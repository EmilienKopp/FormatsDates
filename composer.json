{
  "name": "emilienkopp/formats-dates-trait",
  "description": "A Laravel-Carbon trait for easy date formatting",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Emilien Kopp",
      "email": "emilien.kopp@gmail.com"
    }
  ],
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "analyse": "vendor/bin/phpstan analyse"
  },
  "require": {
    "php": "^8.2",
    "nesbot/carbon": "^2.0|^3.0",
    "illuminate/support": "^7.0|^8.0|^9.0|^10.0|^11.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpstan/phpstan": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "EmilienKopp\\DatesFormatter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EmilienKopp\\Tests\\": "Tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [],
      "aliases": []
    }
  }
}
